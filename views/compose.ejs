<%- include("partials/header") -%>

<form class="item" action="/compose" method="post">
  <div class="form-group">
    <h1>Compose</h1>
    <label>Title</label>
    <input class="form-control" type="text" name="postTitle" value="">
    <label>Post</label>
    <textarea class="form-control" name="postBody" rows="8" cols="80"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="newPost">Publish</button>
</form>

